<h1>Books</h1>

<%= link_to 'New Book', new_book_path, class: "btn btn-primary mb-3" %>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= truncate(book.description, length: 100) %></td>
        <td><%= link_to 'Show', book_path(book), class: "btn btn-info btn-sm" %></td>
        <% if logged_in? %>
          <td><%= link_to 'Edit', edit_book_path(book), class: "btn btn-warning btn-sm" %></td>
          <td><%= link_to 'Delete', book_path(book), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>