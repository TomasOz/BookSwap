<%= form_with model: book, local: true, class: "p-4 border rounded bg-light" do |form| %>
  <% if book.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h5>
      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :author, class: "form-label" %>
    <%= form.text_field :author, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, rows: 5, class: "form-control" %>
  </div>

  <div class="mt-4">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to 'Back to List', books_path, class: "btn btn-secondary ms-2" %>
  </div>
<% end %>