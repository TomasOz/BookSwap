<!-- Main Content -->
<h1 class="text-center mb-4">Books Board</h1>

<div class="container">
  <div class="row">
    <% @books.each do |book| %>
      <div class="col-md-4 mb-4"> <!-- Adjust col-md-* for different screen sizes -->
        <div class="card h-100 shadow-sm"> <!-- Added shadow for a lifted effect -->
          <img src="<%= 'https://cdn.britannica.com/94/181394-050-2F76F7EE/Reproduction-cover-edition-The-Catcher-in-the.jpg' %>" class="card-img-top" alt="<%= book.title %>" /> 
          
          <div class="card-body">
            <h5 class="card-title"><%= book.title %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= book.author %></h6> <!-- Using h6 for author for better hierarchy -->
            <p class="card-text"><%= truncate(book.description, length: 100) %></p> <!-- Truncate long descriptions -->
          </div>
          <div class="card-footer">
            <%= link_to 'View Details', book_path(book), class: 'btn btn-primary btn-block' %> <!-- Button for actions -->
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>